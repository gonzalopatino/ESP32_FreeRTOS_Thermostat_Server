# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Generate a new secret key with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Set to True for development, False for production
DJANGO_DEBUG=True

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=127.0.0.1,localhost

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=thermostat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Alternative: Single DATABASE_URL (used by some hosting providers)
# DATABASE_URL=postgres://user:password@localhost:5432/thermostat

# -----------------------------------------------------------------------------
# Redis Cache (Optional - for production)
# -----------------------------------------------------------------------------
# Uncomment to use Redis instead of in-memory cache
# REDIS_URL=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Backend options:
#   django.core.mail.backends.console.EmailBackend  (development - prints to console)
#   django.core.mail.backends.smtp.EmailBackend     (production - sends real emails)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (for production email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=ThermostatRTOS <noreply@example.com>

# -----------------------------------------------------------------------------
# Admin Error Notifications
# -----------------------------------------------------------------------------
# Admins receive email when errors occur (DEBUG=False)
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Legacy API key (if used for backward compatibility)
TELEMETRY_API_KEY=your-telemetry-api-key

# Default device ID for testing
DEFAULT_DEVICE_ID=esp32-thermostat-1

# Number of recent telemetry samples to display
RECENT_TELEMETRY_LIMIT=50
